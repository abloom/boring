#!/usr/bin/env ruby

$:.unshift File.expand_path File.join File.dirname(__FILE__), "..", "lib"

require 'boring'
require 'boring/runner'

dialogues = Boring.find_dialogues File.expand_path "~"
videos = Boring.find_videos File.expand_path "~"
runner = Boring::Runner.new(videos, dialogues)

commands = [:video, :dialogue]

while true
  case commands.shuffle.first
  when :video
    runner.play_random_video
  when :dialogue
    runner.say_random_dialogue
  end

  sleep 5
end
