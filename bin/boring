#!/usr/bin/env ruby

$:.unshift File.expand_path File.join File.dirname(__FILE__), "..", "lib"
require 'boring'

video_path = File.expand_path "~"
Boring.init(video_path)

while true
  Boring.videos.shuffle.each do |video|
    video.play
    idx = Boring.videos.index video

    dialogue = Boring.dialogues.shuffle.first
    dialogue.render

    sleep 10
  end

  sleep 20
end
